{% extends 'base.html.twig' %}

{% block steelsheets %}
    
{% endblock %}
{% block javascripts %}
    
{% endblock %}

{% block body %}
   <div class="container center">
       <h2 class="titre">Liste des categories</h2>
       
    <br>
       <table border class="center font">
            <thead>
                <tr>             
                    <th>Nom de la catégorie</th>  
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('category_edit', {'id': category.id}) }}">Options</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
     
          </div>
        </table>
    <br>
    
</div>
 <div class="container center">
        
            <a class="btn btn-info" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
            <a class="btn btn-success" href="{{ path('user_index') }}">Gestion des utilisateurs</a>
            <a class="btn btn-info" href="{{ path('public_profile') }}">Profils publics</a>
        
    </div>

<script>document.getElementById('pas_vu').style.display ='block';</script>
<script>document.getElementById('inscription').style.display ='none';</script>
<script>document.getElementById('connexion').style.display ='none';</script>
<script>document.getElementById('deconnexion').style.display ='block';</script>
<script>document.getElementById('espace_membre').style.display ='block';</script>
<script>document.getElementById('admin').style.display ='none';</script>
{% endblock %}
