{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Les catégories</h1>
    <br>
<div class="container font">
    <table>
        <thead>
            <tr>
   
                <th>Nom de la catégorie</th>
               
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                     <a href="{{ path('category_delete', {'id': category.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Créer une catégorie.</a>
    </div>
{% endblock %}