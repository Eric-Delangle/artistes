{% extends 'base.html.twig' %}

{% block title %}Réponse{% endblock %}

{% block body %}
<div class="container font"> 
    
    <h1 class="center">Reponse</h1>
<br>
    <table class="table placeho">
        <tbody>

            <tr>
                <th>Message</th>
                <td>{{ reponse.message }}</td>
            </tr>
            <tr>
                <th>Date/heure</th>
                <td>{{ reponse.postedAt ? reponse.postedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success placeho" href="{{ path('reponse_newRep', {'id': reponse.id}, {'message': reponse}) }}">Repondre</a>
    <a class="btn btn-info placeho" href="{{ path('message_index', {'id': app.user.id}) }}">Retour à vos messages</a>

    {{ include('reponse/_delete_form.html.twig') }}
</div>
{% endblock %}
